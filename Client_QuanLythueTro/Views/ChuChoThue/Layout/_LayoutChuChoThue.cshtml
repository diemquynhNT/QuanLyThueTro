<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Scripts.Render("~/bundles/jquery")*@
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- icon boxicons  -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- custom css file link  -->
    <link href="~/css/lauoutcct.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @*navigation*@
    <!-- header section starts  -->
    <header class="header">
        <div class="d-flex justify-content-around mb-3">
            <div class="p-2">
                <a class="navbar-brand " href="">
                    <img src="" height="40" width="30px" />
                    <span>HOME 108</span>
                </a>
            </div>
            <div class="p-2">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Đăng nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Đăng ký</a>
                    </li>
                </ul>
            </div>
            <div class="p-2">
                <button type="button" class="btn btn-danger">Đăng tin mới</button>
            </div>
        </div>
    </header>
    <nav id="navbar" class="sticky-top" style="background: #9DD4D1;">
        <ul id="menu-main-menu" class="nav justify-content-center">
            <li class="navbar_item active current-menu-item"><a class="nav-link" href="">Trang chủ</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Cho thuê phòng trọ</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Nhà cho thuê</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Cho thuê căn hộ</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Mặt bằng, văn phòng</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Tìm người ở ghép</a></li>
            <li class="navbar_item"><a class="nav-link" href="">Tin tức</a></li>
            <li class="navbar_item"><a class="nav-link" rel="nofollow" href="">Bảng giá dịch vụ</a></li>
        </ul>
    </nav>
    <!-- header section ends -->
    <div class="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Client_QuanLythueTro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
