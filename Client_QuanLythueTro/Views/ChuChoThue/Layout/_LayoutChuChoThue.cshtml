<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Scripts.Render("~/bundles/jquery")*@
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- icon boxicons  -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- custom css file link  -->
    <link href="~/css/lauoutcct.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @*navigation*@
    <!-- header section starts  -->
    <header class="header bg-light">
        <div class="container d-flex justify-content-around">
            <div class="p-2">
                <a class="navbar-brand" href="">
                    <img src="~/img/logoproject.jpg" height="75px" width="130px" />
                    <span class="d-block text-sm-center">Bạn của mọi nhà</span>
                </a>
            </div>
            <div class="p-2 navbar navbar-expand-sm bg-light justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-primary" href="#"><i class='bx bx-user'></i> Đăng nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-info" href="#"><i class='bx bxs-user-plus'></i> Đăng ký</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-muted" href="#"><i class='bx bx-heart'></i> Yêu thích</a>
                        
                    </li>
                    <li class="nav-item">
                        <button type="button" class="btn btn-danger"><i class='bx bx-plus'></i> Đăng tin mới</button>
                    </li>
                </ul>
                
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top justify-content-center" style="background: #cbecf7">
        <div class="container-fluid">
            <a class="navbar-brand font-weight-bold" href="#">Menu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active @ViewBag.tc" aria-current="page" href="~/ChuChoThue/IndexTinDangPT">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê phòng trọ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nhà cho thuê</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê căn hộ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tìm người ở ghép</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bảng giá dịch vụ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- header section ends -->
    <div class="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Client_QuanLythueTro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
