@using Newtonsoft.Json
@using Microsoft.AspNetCore.Http
@{
    var userJson = Context.Session.GetString("user");
    Users user = null;
    if (userJson != null)
    {
        user = JsonConvert.DeserializeObject<Users>(userJson);
    }
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Scripts.Render("~/bundles/jquery")*@
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- icon boxicons  -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- custom css file link  -->
    <link href="~/css/lauoutcct.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
</head>
<body>
    @*navigation*@
    <!-- header section starts  -->
    <header class="header bg-light">
        <div class="container d-flex justify-content-around">
            <div class="p-2">
                <a class="navbar-brand" href="">
                    <img src="~/img/logoproject.jpg" height="75px" width="130px" />
                    <span class="d-block text-sm-center">Bạn của mọi nhà</span>
                </a>
            </div>
            <div class="p-2 navbar navbar-expand-sm bg-light justify-content-center">
                <ul class="navbar-nav">
                    @{
                        if(user == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" href="~/Login/LoginCustomer"><i class='bx bx-user'></i> Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" href="#"><i class='bx bxs-user-plus'></i> Đăng ký</a>
                            </li>
                        }
                        else
                        {
                            <li class=" nav-item">
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle user-wrapper" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @if (string.IsNullOrEmpty(user.hinhAnh))
                                        {
                                            <img id="imgUser" alt="User Image" width="37px" height="37px" />

                                        }
                                        else
                                        {
                                            <img src="@Url.Content("~/img/Hanoi.jpg")" width="37px" height="37px">
                                        }
                                        <b style="">Xin chào, @user.hoTen</b>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink" style="z-index: 1030;">
                                        <li><a class="dropdown-item" href="#">Quản lý tài khoản</a></li>
                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "ChuChoThue")">Đăng xuất</a></li>
                                    </ul>
                                </div>
                                
                            </li>
                        }
                    }
                    
                    <li class="nav-item">
                        <a class="nav-link text-muted" href="#"><i class='bx bx-heart'></i> Yêu thích</a>
                    </li>
                    <li class="nav-item">
                        <a type="button" class="btn btn-danger" href="/ChuChoThue/CreateTinDangPT"><i class='bx bx-plus'></i> Đăng tin mới</a>
                    </li>
                </ul>
                
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top justify-content-center" style="background: #cbecf7">
        <div class="container">
            <a class="navbar-brand font-weight-bold" href="#">Menu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active @ViewBag.tc" aria-current="page" href="~/ChuChoThue/IndexTinDangPT">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê phòng trọ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nhà cho thuê</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê căn hộ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tìm người ở ghép</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bảng giá dịch vụ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- header section ends -->
    <div class="container">
        @RenderBody()
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Client_QuanLythueTro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
