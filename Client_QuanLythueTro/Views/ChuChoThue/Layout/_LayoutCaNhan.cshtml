<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Scripts.Render("~/bundles/jquery")*@
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!-- icon boxicons  -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- custom css file link  -->
    <link href="~/css/lauoutcct.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .sidebar {
            position: fixed;
            top: 62px;
            bottom: 0;
            left: 0;
            z-index: 1;
            padding: 20px;
            overflow-x: hidden;
            overflow-y: auto;
            background-color: #fff;
            border-right: 1px solid #e6e6e6;
            border-bottom: 1px solid #e6e6e6;
        }

            .nav-item a:hover {
            color: #f1f1f1;
        }
        .active{
            background-color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top justify-content-center" style="background: #cbecf7">
        <div class="container-fluid">
            <a class="navbar-brand font-weight-bold" href="#">Home 180</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active @ViewBag.tc" aria-current="page" href="~/ChuChoThue/IndexTinDangPT">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê phòng trọ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nhà cho thuê</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Cho thuê căn hộ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tìm người ở ghép</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Bảng giá dịch vụ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="row" style="margin-top: 80px;">
        <div class="col-md-2">
            <nav class="navbar d-none d-lg-block sidebar">
                <ul class="nav navbar-nav">
                    <li class="">
                        <span>
                            <img src="~/img/user.png" class="img-fluid rounded-circle m-0" height="50px" width="50px" />
                        </span>
                        <span>Diễm Khang</span>
                        <p class="btn-info-author">
                            <p>Mã thành viên: #1215120251</p>
                            <p>Loại TK: Thường</p>
                        </p>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Quản lý tin đăng </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Sửa thông tin cá nhân </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Lịch sử giao dịch </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Lịch sử thanh toán </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Bảng giá dịch vụ </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Liên hệ </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"> Đăng xuất </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-md-1 d-none d-lg-block"></div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
