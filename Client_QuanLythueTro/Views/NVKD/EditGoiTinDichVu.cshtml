@model Client_QuanLythueTro.Models.DichVuDangTin

@{
    ViewData["Title"] = "EditGoiTinDichVu";
    Layout = "~/Views/NVKD/LayoutNVKD/LayoutNVKD.cshtml";
    ViewBag.services = "active";
    ViewBag.Name = "Quản lý dịch vụ";
}
@{
    // alert includ icons: question, info, success, error, warning
    //footer: '<a href="">Why do I have this issue?</a>'
    var checkMessage = TempData["AlertMessage"];
    if (checkMessage == "successful")
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Thành công',
                text: 'Xóa lịch xem thành công!'
            })
        </script>

    }
    if (checkMessage == "failed")
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Đã có lỗi xảy ra',
                text: 'Chỉ được xóa lịch xem trước 24h tính từ ngày xem!'
            })
        </script>

    }
}

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="tile" id="printMe">
                <div class="element-button">
                    <h4 style="text-align:center">Chỉnh sửa dịch vụ gói tin</h4>
                </div>
                <form asp-action="EditGoiTinDichVu">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <b>Mã gói tin</b>
                        <input asp-for="idDichVu" class="form-control" readonly />
                        <span asp-validation-for="idDichVu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <b>Loại gói tin</b>
                        <input asp-for="loaiDichVu" class="form-control" />
                        <span asp-validation-for="loaiDichVu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <b>Giá</b>
                        <input asp-for="giaCa" class="form-control" type="number" min="0" />
                        <span asp-validation-for="giaCa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <b>Hạn sử dụng/ngày</b>
                        <input asp-for="hanDung" class="form-control" />
                        <span asp-validation-for="hanDung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" /> |
                        <a class="btn btn-warning" href="~/NVKD/QuanLyDichVu">Trở lại</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

