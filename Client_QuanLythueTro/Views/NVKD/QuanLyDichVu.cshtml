@model IEnumerable<Client_QuanLythueTro.Models.DichVuDangTin>
@{
    ViewData["Title"] = "QuanLyDichVu";
    Layout = "~/Views/NVKD/LayoutNVKD/LayoutNVKD.cshtml";
    ViewBag.services = "active";
    ViewBag.Name = "Quản lý dịch vụ";
    List<LoaiTaiKhoan> listTK = ViewBag.listTK;
}
<style>
    .container{
        width: 90%;
        height: 100%;
        max-width: 960px;
        margin: 0 auto;
        padding: 30px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .msg{
        font-size: 90px;
        font-weight: bold;
        background: linear-gradient(to right, #7927b2, #fb3182);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        max-width: 350px;
        text-transform: uppercase;
        line-height: initial;
    }
</style>
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">
            <h4 class="btn btn-outline-info">Gói tin dịch</h4>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1">
            <h5 class="btn btn-outline-success">Tài khoản</h5>
        </a>
    </li>

</ul>
<div class="tab-content">
    <div id="home" class="tab-pane active">
        <div class="row">
            <div class="col-md-8">
                <div class="tile">
                    <h2 class="tile-title">DANH SÁCH GÓI DICH VỤ</h2>
                    <div class="tile-body">
                        <div class="row element-button" style="padding:10px">
                            <div class="col-md-12 col-sm-12">
                                <a asp-action="CreateGoiTinDichVu" class="btn btn-success">
                                    Thêm mới
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                                    @*//Phần render từng dòng trong C#*@
                                    <thead style="background-color: #ffd43b; text-align:center;">
                                        <tr>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Mã</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Loại gói tin</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Giá</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Hạn sử dụng/ngày</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="9" class="text-center"> Không có dữ liệu </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.idDichVu)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.loaiDichVu)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.giaCa)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.hanDung)

                                                    </td>
                                                    <td style="text-align:center">
                                                        <a href="/NVKD/EditGoiTinDichVu/@item.idDichVu" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete" data-target="#DeleteModal-@item.idDichVu" data-toggle="modal">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                        <form asp-controller="NVKD" asp-action="DeleteGoiTin" asp-route-id="@item.idDichVu" method="post">
                                                            <div class="modal" tabindex="-1" role="dialog" style="padding:100px 350px;margin:50px;text-align:center" id="DeleteModal-@item.idDichVu">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title">Xác nhận xóa dịch vụ gói tin mã @item.idDichVu</h5>
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true">&times;</span>
                                                                            </button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <p style="text-align:center">Bạn có muốn xóa gói tin dịch vụ này?</p>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                                                                            <input type="submit" value="Đồng ý" class="btn btn-danger" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="container">
                    <p class="msg">
                        Dịch vụ gói tin
                    </p>
                </div>
                
            </div>
        </div>
    </div>

    <div id="menu1" class="tab-pane fade">
        <div class="row">
            <div class="col-md-8">
                <div class="tile">
                    <h2 class="tile-title">DANH SÁCH TÀI KHOẢN DỊCH VỤ</h2>
                    <div class="tile-body">
                        <div class="row element-button" style="padding:10px">
                            <div class="col-md-12 col-sm-12">
                                <a asp-action="CreateTK" class="btn btn-success">
                                    Thêm mới
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable1" role="grid" aria-describedby="sampleTable_info">
                                    @*//Phần render từng dòng trong C#*@
                                    <thead style="background-color: #ffd43b; text-align:center;">
                                        <tr>

                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Mã</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Loại</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Giá</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Hạn sử dụng/ngày</th>
                                            <th aria-controls="sampleTable" rowspan="1" colspan="1">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (listTK.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center"> Không có dữ liệu </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in listTK)
                                            {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.idLoaiTK)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.tenLoaiTK)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.giaTK)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.hanDung)
                                                    </td>
                                                    <td style="text-align:center">
                                                        <a href="/NVKD/EditTK/@item.idLoaiTK" class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a class="btn btn-outline-primary btn-sm" ata-toggle="tooltip" title="Delete" data-target="#DeleteModal-@item.idLoaiTK" data-toggle="modal">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                        <form asp-controller="NVKD" asp-action="DeleteTK" asp-route-id="@item.idLoaiTK" method="post">
                                                            <div class="modal" tabindex="-1" role="dialog" style="padding:100px 350px;margin:50px;text-align:center" id="#DeleteModal-@item.idLoaiTK">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title">Xác nhận xóa loại tài khoản mã số @item.idLoaiTK</h5>
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true">&times;</span>
                                                                            </button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <p style="text-align:center">Bạn có muốn xóa loại tài khoản dịch vụ này ?</p>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                                                                            <input type="submit" value="Vẫn xóa" class="btn btn-danger" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </form>

                                                    </td>
                                                </tr>


                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-4">
                <div class="container">
                    <p class="msg">
                        Dịch vụ loại tài khoản
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

