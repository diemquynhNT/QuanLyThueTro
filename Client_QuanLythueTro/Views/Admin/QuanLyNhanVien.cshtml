    function GetImgUser(id) {
        var url = "https://localhost:7034/api/Users/GetImage?id=" + id;

        fetch(url)
            .then(function (response) {
                return response.blob();
            })
            .then(function (data) {
                var img = document.getElementById("imguser-" + id);
                img.src = URL.createObjectURL(data);
                img.style.visibility = "visible";
            })
            .catch(function (error) {
                console.log("Error: " + error);
            });
    }
</script>


