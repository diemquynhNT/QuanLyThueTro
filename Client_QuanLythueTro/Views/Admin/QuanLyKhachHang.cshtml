            <script>
                swal("Thành công", "Đăng kí tài khoản nhân viên thàn công", "success");
            </script>
        }
    }
    <div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="row" style="padding:10px;">
